
<h1><%= @recipe.title %></h1>

<p>
  <strong>Ingredients:</strong>

    <% @recipe.ingredients.each do |ingredient| %>
    <li><%= link_to ingredient.name, ingredient %></li>
    <% end %>

</p>

<p>
  <strong>Instructions:</strong>
  <%= @recipe.instructions %>
</p>

<% if current_user %>
  <%= link_to "Edit", edit_recipe_path %>
  <%= link_to "Back", recipes_path %>
<% else %>
  <% "Please sign in" %>
<%end%>
