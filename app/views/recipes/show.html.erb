
<h1><%= @recipe.title.titleize %></h1>

<p>
  <strong>Ingredients:</strong>

     <% @recipe.recipe_ingredients.each do |recing| %>

      <li>  <%= recing.quantity %>
        <%= recing.ingredient_name %>
      </li>
      <% end %>
</p>

<p>
  <strong>Instructions:</strong>
  <%= @recipe.instructions %>
</p>

<% if @culinary_artist %>
  <%= link_to "Edit", edit_recipe_path %>
  <%= link_to "Back", recipes_path %>
<% else %>
  <% "Please sign in" %>
<%end%>
