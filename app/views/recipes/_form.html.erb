<%= form_for @recipe do |f| %>
  <p>Title: <%= f.text_field :title %></p>
  <ul>
    <%= f.fields_for :recipe_ingredients do |recipe_ingredient| %>
    <li>
      name: <%= recipe_ingredient.text_field :name %>
      qty: <%= recipe_ingredient.text_field :quantity %>
    </li>
    <% end %>
<br>
    <div class="field">
      <%= f.label :instructions %>
      <%= f.text_area :instructions %>
    </div>
    <%= link_to 'add_ingredient', new_ingredient_path %>
  </ul>

  <div class="actions">
  <%= f.submit "Create Recipe", class: "btn btn-primary" %> |
  <h3><%= link_to "Index", recipes_path(@recipe.culinary_artist), class: "btn btn-primary" %></h3>

 </div>
<% end %>
