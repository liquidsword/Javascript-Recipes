<h2>Welcome to your recipe page! Keep on cooking and creating! </h2>
</br>

<style>
table {
  width:100%
}
table, th, td {
  border: 2px solid black;
}
th, td {
  padding: 5px;
}
table#t01 tr:nth-child(even) {
    background-color: #eee;
}
table#t01 tr:nth-child(odd) {
   background-color: #fff;
}
table#t01 th {
    background-color: darkgreen;
    color: white;
}

</style>

<table id="t01">
  <tr>
    <th>Title</th>
    <th>Instructions</th>
    <th>Show Links</th>
    <th>Edit Links</th>
    <th>Delete Links</th>
  </tr>

<% if @culinary_artist %>

<% @recipes.each do |recipe| %>
  <tr>
    <td><%= recipe.title.titlecase %></td>
    <td><%= recipe.instructions %></td>
    <td><%= link_to "Show", recipe %></td>
    <td><%= link_to "Edit", edit_culinary_artist_recipe_path %></td>
    <td><%= link_to "Destroy", recipe_path(recipe), method: :delete, data: { confirm: "Are you absolutely certain?" } %>  </td>
  </tr>
 <% end %>
<% end %>
</table>

<br>
