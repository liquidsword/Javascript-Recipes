<h1> Join the Journey </h1>

<%= form_for @culinary_artist do |f| %>

  <div class="form-group">
    <%= f.label :name, "Please create a username" %><br>
    <%= f.text_field :culinary_artist_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email, "Enter your email" %><br>
    <%= f.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Please create a password" %><br>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm your password" %><br>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Register", class: "btn btn-primary" %>
  </div>
 <% end %>
